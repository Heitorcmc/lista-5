#include <stdio.h>

int main(void) {
  //iniciar variavel
  int a;
  float b;
  char c;

  // ler variaveis
  printf("Digite um numero inteiro, um numero real e um caracter: ");
  scanf("%d %f %c", &a, &b, &c);

  // iniciar ponteiros
  int *p1 = &a;
  float *p2 = &b;
  char *p3 = &c;

 // trocar numeros
  *p1 += 10;
  *p2 += 3.5;
  *p3 += 2;  

  printf("%d %f %c", *p1, *p2, *p3);
}
